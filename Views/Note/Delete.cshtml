@model NoteViewModel

@{
    ViewData["Title"] = "Delete";
}

<section class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1>Are you sure that you want to @ViewData["Title"] this?</h1>
                </div>
                <div class="card-body">
                    <h2>@Model.Title</h2>
                    @Html.Raw(Model.Content)
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <a asp-action="Index" title="Go back">&larr; Go back</a>
                            <form asp-action="Delete" asp-controller="Note" method="post">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <p>
                                <small>Created On: <span class="font-weight-bold">@Html.DisplayFor(model => model.DateCreated)</span></small><br />
                                <small>Modified On: <span class="font-weight-bold">@Html.DisplayFor(model => model.DateModified)</span></small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>