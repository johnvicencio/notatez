@model NoteViewModel
@section Styles {
    @{ await Html.RenderPartialAsync("_HtmlEditorStylePartial"); }
}

@{
    ViewData["Title"] = "Create a note";
}

<section class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Note" method="post">
                        <input type="hidden" asp-antiforgery="true" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" autocomplete="title" aria-required="true" placeholder="Title" />
                            <label asp-for="Title" class="control-label"></label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea asp-for="Content" id="summernote" class="form-control" autocomplete="content" aria-required="true"></textarea>
                            @*<label asp-for="Content" class="control-label"></label>*@
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="AccountId" />
                        <input type="hidden" asp-for="Author" />
                        <div class="form-floating">
                            <div class="d-flex flex-wrap justify-content-between align-items-center">
                                <a asp-action="Index" title="Go back">&larr; Go back</a>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_HtmlEditorScriptPartial");}
}
